<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlNode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg" >

        <ImageButton
            android:id="@+id/ibNodeBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:contentDescription="@string/ib_node_bookmark_content_description"
            android:src="@drawable/button_plus_square" />

        <ImageButton
            android:id="@+id/ibNodeSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@string/ib_node_settings_content_description"
            android:src="@drawable/button_settings_square" />

        <TextView
            android:id="@+id/tvNodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/ibNodeSettings"
            android:layout_toRightOf="@id/ibNodeBookmark"
            android:gravity="center"
            android:inputType="none"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlNodeAds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <com.google.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
            android:id="@+id/avNodeBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="YOUR_AD_UNIT_ID"
            ads:backgroundColor="#000000"
            ads:loadAdOnCreate="false"
            ads:primaryTextColor="#FFFFFF"
            ads:secondaryTextColor="#CCCCCC" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/svNode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rlNodeAds"
        android:layout_below="@id/rlNode" >

        <TextView
            android:id="@+id/tvNodeBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:inputType="none"
            android:textColor="#ffffff" />
    </ScrollView>

</RelativeLayout>